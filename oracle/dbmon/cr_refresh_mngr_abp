#!/bin/ksh
sqlplus "/ as sysdba" <<EOF
set line 132 pages 0 echo on trimspo on
CREATE USER REFRESH_MNGR
  IDENTIFIED BY REFRESH_MNGR_ABP
  DEFAULT TABLESPACE POOL_DATA
  TEMPORARY TABLESPACE TEMP
  PROFILE DEFAULT
  ACCOUNT UNLOCK;
  -- 1 Roles for REFRESH_MNGR 
  GRANT CONNECT TO REFRESH_MNGR;
  ALTER USER REFRESH_MNGR DEFAULT ROLE ALL;
  -- 1 System Privilege for REFRESH_MNGR 
  GRANT ALTER ANY MATERIALIZED VIEW TO REFRESH_MNGR;
  -- 1 Tablespace Quota for REFRESH_MNGR 
EOF


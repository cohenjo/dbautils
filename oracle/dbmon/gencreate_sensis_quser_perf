#!/bin/ksh
#*****************************************************************************
#
#  This script is used to generate truncate for user 
#
#  USAGE: gencreate_dev_user username
#
#  By Adi Zohar - Feb 2003
#*****************************************************************************

sqlplus "/ as sysdba" <<EOF
set line 132 pages 0 echo on trimspo on
CREATE USER SENSIS_QUSER_PERF
  IDENTIFIED BY nick_singh
  DEFAULT TABLESPACE SYSAUX
  TEMPORARY TABLESPACE TEMP
  PROFILE DEFAULT
  ACCOUNT UNLOCK;

  GRANT AAM_WORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT PD_WORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT CTXAPP TO SENSIS_QUSER_PERF;
  GRANT DLV_WORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT SO_WORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT AUTHWORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT PARAM_WORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT REF_APPL_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT CONNECTOR_ROLE TO SENSIS_QUSER_PERF;
  GRANT ACMS_WORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT REFREAD_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT REFWORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT ADS_WORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT AFL_WORK_QUERY_ROLE TO SENSIS_QUSER_PERF;
  GRANT SELECT_CATALOG_ROLE TO SENSIS_QUSER_PERF;
grant ADS_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant BIL_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant CGS_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant CYP_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant DM_ALFRESCO_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant DM_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant EPR_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant HM_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant NTF_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant PDLM_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;
grant SP_WORK_QUERY_ROLE to SENSIS_QUSER_PERF;

  ALTER USER SENSIS_QUSER_PERF DEFAULT ROLE ALL;
  -- 1 Tablespace Quota for SENSIS_QUSER_PERF 
  ALTER USER SENSIS_QUSER_PERF QUOTA UNLIMITED ON POOL_DATA;
  alter user SENSIS_QUSER_PERF IDENTIFIED BY nick_singh;

EOF
